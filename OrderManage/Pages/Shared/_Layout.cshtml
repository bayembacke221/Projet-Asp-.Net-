<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colways</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.scss" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrderManage.styles.css" asp-append-version="true" />
</head>
<body>
   
    <header  class="header">
         <a class="navbar-brand" asp-area="" asp-page="/Index" style="color:black;font-size:x-large" class="logo"> <i style="color:orange" class="fas fa-store"></i> Colways </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="icons">
                    <div id="menu-btn" class="fas fa-bars"></div>
                    <div id="search-btn" class="fas fa-search"></div>
                </div>
    </header>
             <div class="side-bar">
                 <div id="close-side-bar" class="fas fa-times"></div>
                  <div class="user">
                    <img src="~/lib/laptop.png" alt="">
                    <h3>Menu</h3>
                </div>
               <nav class="navbar">
                            <a  style="text-decoration:none" asp-area="" asp-page="/Index"><i  class="fas fa-angle-right"></i> Home</a>
                        
                            <a  style="text-decoration:none" asp-area="" asp-page="/Customers/Index"><i class="fas fa-angle-right"></i> Customers</a>
                       
                            <a  style="text-decoration:none" asp-area="" asp-page="/Orders/Index"><i class="fas fa-angle-right"></i> Orders</a>
                        
                            <a  style="text-decoration:none" asp-area="" asp-page="/Products/Index"> <i class="fas fa-angle-right"></i>Products</a>
                        
                            <a  style="text-decoration:none" asp-area="" asp-page="/OrderDetails/Index"><i class="fas fa-angle-right"></i> Order Details</a>
                     
                 </nav>
            </div>
       
    <div class="container" style="font-size:small">
        <main role="main"  class="pb-3">
            @RenderBody()
        </main>
    </div>

   
<section class="quick-links">
    <a style="text-decoration:none"  asp-area="" asp-page="/Index" class="logo">Home</a>      
    <div class="links">
        <a  style="text-decoration:none" asp-area="" asp-page="/Customers/Index"> Customers</a>
        <a  style="text-decoration:none" asp-area="" asp-page="/Orders/Index">Orders</a>
        <a  style="text-decoration:none"  asp-area="" asp-page="/Products/Index">Products</a>
        <a  style="text-decoration:none" asp-area="" asp-page="/OrderDetails/Index"> Order Details</a>            
    </div>

    <div class="share">
        <a href="#" class="fab fa-facebook-f"></a>
        <a href="#" class="fab fa-twitter"></a>
        <a href="#" class="fab fa-instagram"></a>
        <a href="#" class="fab fa-linkedin"></a>
    </div>

</section>

<section class="credit">

    <p> Création de  <span>Baye Mbacke Mbaye</span>  </p>

    <img src="~/lib/card_img.png" alt="">

</section>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>